doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    title Instagram
    link(rel='icon', type='image/ico', href='img/logo.jpg')
    link(href='/vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/vendor/fontawesome-free/css/all.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/vendor/simple-line-icons/css/simple-line-icons.css')
    link(href='https://fonts.googleapis.com/css?family=Lato', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Catamaran:100,200,300,400,500,600,700,800,900', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Muli', rel='stylesheet')
    link(rel='stylesheet', href='/device-mockups/device-mockups.min.css')
    link(href='/css/new-age.min.css', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='/style.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  body#page-top
    nav#mainNav.navbar.navbar-expand-lg.navbar-light.fixed-top
      .container
        a.navbar-brand.js-scroll-trigger(href='#page-top')
          i.fa.fa-instagram(style='font-size:42px;')
            |  |
            |    
            span.navbar-brand.js-scroll-trigger(style="font-family:'Billabong';font-size:42px;font-weight:normal;display:inline-block")
              |  Instagram
        button.navbar-toggler.navbar-toggler-right(style='font-family:Billabong ', type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          | Menu
          i.fas.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link.js-scroll-trigger(href='/signup') Sign Up
            li.nav-item
              a.nav-link.js-scroll-trigger(href='#contact') Contact
    header.masthead
      br
      br
      .container.h-100
        .row.h-100
          .col-lg-7.my-auto
            .header-content.mx-auto
              if errors
                each error,i in errors
                  div.alert.alert-danger(style='font-family: Billabong') #{error.msg}
              h1.mb-3(style='font-family: Billabong') Get Started
              br
              form.form-horizontal(method='post',action='/',role='form')
                .form-group(style='color:white')
                  .input-group.mb-3
                    .input-group-prepend
                      span#basic-addon1.input-group-text @
                    input.form-control(name='username',type='text', placeholder='Username', aria-label='Username', minlength=4, required='',aria-describedby='basic-addon1')
                .form-group(style='color:white')
                  .input-group.mb-3
                    .input-group-prepend
                      span#basic-addon1.input-group-text #
                    input.form-control(name='password',type='password', placeholder='Password', aria-label='Password', minlength=5, required='',aria-describedby='basic-addon1')
                input.btn.btn-outline.btn-xl.js-scroll-trigger(type='submit',name='submit',value='Login',style="color:black")
                |  
                a.btn.btn-outline.btn-xl.js-scroll-trigger(href='/signup') Sign Up
          .col-lg-5.my-auto
            .device-container
              .device-mockup.iphone6_plus.portrait.white
                .device
                  .screen
                    img.img-fluid(src='/img/iPhone Insta Screenshot.png', alt='')
    section#contact.contact.bg-primary
      .container
        ul.list-inline.list-social
          li.list-inline-item.social-twitter
            a(href='https://twitter.com/meharfatimakhan',target="_blank")
              i.fab.fa-twitter
          li.list-inline-item.social-instagram
            a(href='https://www.instagram.com/meharfatimakhan/',target="_blank")
              i.fab.fa-instagram
          li.list-inline-item.social-facebook
            a(href='https://www.facebook.com/meharfatimakhan4',target="_blank")
              i.fab.fa-facebook-f
    footer
      .container
        p Â© Instagram Pseudo 2018. All Rights Reserved.
        ul.list-inline
          li.list-inline-item
            a(href='#') Privacy
          li.list-inline-item
            a(href='#') Terms
          li.list-inline-item
            a(href='#') FAQ
   
    script(src='/vendor/jquery/jquery.min.js')
    script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
    script(src='/vendor/jquery-easing/jquery.easing.min.js')
    script(src='/js/new-age.min.js')
